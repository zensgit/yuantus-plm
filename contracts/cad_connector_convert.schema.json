{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CAD Connector Convert Response",
  "type": "object",
  "required": ["ok"],
  "properties": {
    "ok": { "type": "boolean" },
    "job_id": { "type": ["string", "null"] },
    "artifacts": {
      "type": "object",
      "properties": {
        "geometry": {
          "type": "object",
          "properties": {
            "gltf_url": { "type": "string" },
            "glb_url": { "type": "string" },
            "obj_url": { "type": "string" },
            "bin_url": { "type": "string" },
            "bbox": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 6,
              "maxItems": 6
            }
          },
          "additionalProperties": true
        },
        "preview": {
          "type": "object",
          "properties": {
            "png_url": { "type": "string" },
            "jpg_url": { "type": "string" },
            "jpeg_url": { "type": "string" }
          },
          "additionalProperties": true
        },
        "attributes": { "type": "object" },
        "bom": { "type": "object" }
      },
      "additionalProperties": true
    },
    "error": { "type": ["string", "null"] },
    "code": { "type": ["string", "null"] }
  },
  "additionalProperties": true
}
