{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CAD ML Platform Vision Analyze Response",
  "type": "object",
  "required": ["success", "provider", "processing_time_ms"],
  "properties": {
    "success": { "type": "boolean" },
    "description": { "$ref": "#/definitions/description" },
    "ocr": { "$ref": "#/definitions/ocr" },
    "provider": { "type": "string" },
    "processing_time_ms": { "type": "number", "minimum": 0 },
    "error": { "type": ["string", "null"] },
    "code": { "type": ["string", "null"] }
  },
  "additionalProperties": true,
  "definitions": {
    "description": {
      "type": ["object", "null"],
      "required": ["summary", "details", "confidence"],
      "properties": {
        "summary": { "type": "string" },
        "details": {
          "type": "array",
          "items": { "type": "string" }
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": true
    },
    "ocr": {
      "type": ["object", "null"],
      "required": ["dimensions", "symbols", "title_block"],
      "properties": {
        "dimensions": {
          "type": "array",
          "items": { "type": "object" }
        },
        "symbols": {
          "type": "array",
          "items": { "type": "object" }
        },
        "title_block": { "type": "object" },
        "fallback_level": { "type": ["string", "null"] },
        "confidence": { "type": ["number", "null"], "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": true
    }
  }
}
