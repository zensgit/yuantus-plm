{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DedupCAD Vision v2 Search Response",
  "type": "object",
  "required": [
    "success",
    "total_matches",
    "duplicates",
    "similar",
    "final_level",
    "timing",
    "level_stats"
  ],
  "properties": {
    "success": { "type": "boolean" },
    "total_matches": { "type": "integer", "minimum": 0 },
    "duplicates": {
      "type": "array",
      "items": { "$ref": "#/definitions/matchItem" }
    },
    "similar": {
      "type": "array",
      "items": { "$ref": "#/definitions/matchItem" }
    },
    "final_level": { "type": "integer", "minimum": 1 },
    "timing": { "type": "object" },
    "level_stats": { "type": "object" },
    "warnings": {
      "type": "array",
      "items": { "type": "string" }
    },
    "error": { "type": ["string", "null"] }
  },
  "additionalProperties": true,
  "definitions": {
    "matchItem": {
      "type": "object",
      "required": [
        "drawing_id",
        "file_hash",
        "file_name",
        "similarity",
        "confidence",
        "match_level",
        "verdict",
        "levels"
      ],
      "properties": {
        "drawing_id": { "type": "string" },
        "file_hash": { "type": "string" },
        "file_name": { "type": "string" },
        "similarity": { "type": "number" },
        "confidence": { "type": "number" },
        "match_level": { "type": "integer" },
        "verdict": { "type": "string" },
        "levels": { "type": "object" },
        "diff_image_base64": { "type": ["string", "null"] },
        "diff_regions": {
          "type": ["array", "null"],
          "items": { "type": "object" }
        }
      },
      "additionalProperties": true
    }
  }
}
